{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "ignore": [
      "dist/",
      "__generated__/*",
      "*.d.ts"
    ]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
    "ignore": [
      "dist/",
      "__generated__/*",
      "*.d.ts"
    ],
		"rules": {
			"recommended": true,
      "correctness": {
        "recommended": true,
        "noRenderReturnValue": "off",
        "noChildrenProp": "off",
        "noConstAssign": "error",
        "noUnreachable": "warn",
        "noUnusedVariables": "warn"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off",
        "noShadowRestrictedNames": "warn",
        "noDoubleEquals": "error"
      }
		}
	},
	"javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
	}
}
