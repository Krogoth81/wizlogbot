{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "esModuleInterop": true,
        "baseUrl": ".",
        "rootDir": "lib",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "paths": {
          "lib/*": ["lib/*"]
        }
    },
    "include": [
      "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        ".vscode",
        "dist"
    ]
}
