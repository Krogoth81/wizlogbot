{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "esModuleInterop": true,
        "baseUrl": ".",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "paths": {
          "api/*": ["src"]
        }
    },
    "exclude": [
        "node_modules",
        "deprecated",
        "dist"
    ]
}
