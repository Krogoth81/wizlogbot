{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "esModuleInterop": true,
        "baseUrl": ".",
        "rootDir": ".",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "outDir": "dist",
    },
    "exclude": [
        "node_modules",
        "deprecated",
        "dist"
    ]
}